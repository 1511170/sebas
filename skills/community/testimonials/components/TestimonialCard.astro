---
interface Props {
  author: string;
  company?: string;
  quote: string;
  image?: string;
  rating?: number;
  date?: string;
  showRating?: boolean;
}

const { author, company, quote, image, rating = 5, date, showRating = true } = Astro.props;

// Generar estrellas
const stars = Array(5).fill(0).map((_, i) => i < rating);
---

<article class="bg-white rounded-xl p-6 shadow-md h-full flex flex-col" itemscope itemtype="https://schema.org/Review">
  <!-- Rating -->
  {showRating && (
    <div class="flex gap-1 mb-4" itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating">
      <meta itemprop="ratingValue" content={rating.toString()} />
      <meta itemprop="bestRating" content="5" />
      {stars.map((filled) => (
        <svg 
          class={`w-5 h-5 ${filled ? 'text-yellow-400' : 'text-gray-200'}`} 
          fill="currentColor" 
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>
  )}
  
  <!-- Quote -->
  <blockquote class="flex-1">
    <p class="text-gray-700 italic mb-4" itemprop="reviewBody">"{quote}"</p>
  </blockquote>
  
  <!-- Author -->
  <footer class="flex items-center gap-3 mt-4 pt-4 border-t">
    {image && (
      <img 
        src={image} 
        alt={author}
        class="w-12 h-12 rounded-full object-cover"
        itemprop="image"
      />
    )}
    <div>
      <cite class="not-italic font-semibold text-gray-900" itemprop="author" itemscope itemtype="https://schema.org/Person">
        <span itemprop="name">{author}</span>
      </cite>
      {company && (
        <p class="text-sm text-gray-500" itemprop="name">{company}</p>
      )}
      {date && (
        <meta itemprop="datePublished" content={date} />
      )}
    </div>
  </footer>
</article>
